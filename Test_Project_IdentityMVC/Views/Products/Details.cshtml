@model Test_Project_IdentityMVC.Models.Product

@{
    ViewBag.Title = "Details";
    String StringNull = null;
    var resCloud = "https://res.cloudinary.com/namnguyen159198/";
    var StringJPG = ".jpg";
    Layout = "~/Views/Admin/Layout/_Layout2.cshtml";
}
    <div class="content-wrapper">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CreateBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateBy.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeleteBy)
            </dt>

            <dd>
                @if (@Model.DeleteBy == null)
                {
                    <span>NULL</span>
                }
                else
                {

                    @Html.DisplayFor(model => model.DeleteBy.Email)
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdateBy)
            </dt>

            <dd>
                @if (@Model.UpdateBy == null)
                {
                    <span>NULL</span>
                }
                else
                {

                    @Html.DisplayFor(model => model.UpdateBy.Email)
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Thumbnails)
            </dt>

            <dd>
                @if (Model.GetThumbnailIDs().Length > 0)
                {
                    foreach (var i in Model.GetThumbnailIDs())
                    {
                        <img src="@resCloud@i@StringJPG" alt="Alternate" class="img-thumbnail" width="100" height="100" with:100% />
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeletedAt)
            </dt>

            <dd>
                @if (@Model.DeletedAt == null)
                {
                    <span>NULL</span>
                }
                else
                {
                    @Html.DisplayFor(model => model.DeletedAt)
                }
            </dd>

        </dl>


        <div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>



