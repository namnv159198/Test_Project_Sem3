@model Test_Project_IdentityMVC.Models.Product

@{
    ViewBag.Title = "Delete";
    String StringNull = null;
    var resCloud = "https://res.cloudinary.com/namnguyen159198/";
    var StringJPG = ".jpg";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}



<div id="main-content" style="margin-top:-2px;">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Create New Product</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item">Product</li>
                        <li class="breadcrumb-item active">Delete Product</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <h4>Product</h4>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.CreateBy)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreateBy.Email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeleteBy)
                            </dt>

                            <dd>
                                @if (@Model.DeleteBy == null)
                                {
                                    <span>NULL</span>
                                }
                                else
                                {

                                    @Html.DisplayFor(model => model.DeleteBy.Email)
                                }
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.UpdateBy)
                            </dt>

                            <dd>
                                @if (@Model.UpdateBy == null)
                                {
                                    <span>NULL</span>
                                }
                                else
                                {

                                    @Html.DisplayFor(model => model.UpdateBy.Email)
                                }
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Content)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Content)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Price)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Price)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Thumbnails)
                            </dt>

                            <dd>
                                @if (Model.GetThumbnailIDs().Length > 0)
                                {
                                    foreach (var i in Model.GetThumbnailIDs())
                                        {
                                            <img src="@resCloud@i@StringJPG" alt="Alternate" class="img-thumbnail" width="100" height="100" with:100% />
                                        }
                                  
                                }
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreatedAt)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeletedAt)
                            </dt>

                            <dd>
                                @if (@Model.DeletedAt == null)
                                {
                                    <span>NULL</span>
                                }
                                else
                                {
                                    @Html.DisplayFor(model => model.DeletedAt)
                                }
                            </dd>

                        </dl>

                        
                        <div>
                            <p>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

