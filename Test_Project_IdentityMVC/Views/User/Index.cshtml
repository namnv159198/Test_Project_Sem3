@model List<Test_Project_IdentityMVC.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Layout/_Layout.cshtml";
}


<div id="main-content" style="margin-top:-2px;">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Index User</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item">User</li>
                        <li class="breadcrumb-item active">List User</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <p>
                            @* @Html.ActionLink("Create New", "Create") *@
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                  UserName
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>

                                    <td>
                                        @* <a href="@Url.Action("Details", "User", new { id = item.Id })" class="btn btn-sm btn-outline-primary border-primary"><i class="icon-eye"></i></a> *@
                                        <a href="@Url.Action("Edit", "User", new { id = item.Id })" class="btn btn-sm btn-outline-success border-success"><i class="icon-pencil"></i></a>
                                        @* <a href="@Url.Action("Delete", "User", new { id = item.Id } )" class="btn btn-sm btn-outline-danger js-sweetalert border-danger" title="Delete" data-type="confirm" onclick="return confirm('Are you sure?')"> <i class="icon-trash"></i></a> *@
                                    </td>
                                </tr>
                            }

                        </table>

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

